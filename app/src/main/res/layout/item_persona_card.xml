<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <RelativeLayout
        android:layout_width="match_parent"

        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvTextName"
            android:text="Nombre: "
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTextDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextName"
            android:text="Documento: "
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextName"
            android:layout_toRightOf="@+id/tvTextDocumento"
            android:text="Documento "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTextTipoDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextDocumento"
            android:text="Tipo Documento: "
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvTipoDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTextDocumento"
            android:layout_toRightOf="@+id/tvTextTipoDocumento"
            android:text="Nombre: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTextFechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTipoDocumento"
            android:text="Fecha Nacimiento: "
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvFechaNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTipoDocumento"
            android:layout_toRightOf="@+id/tvTextFechaNacimiento"
            android:text="Nombre: "

            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>