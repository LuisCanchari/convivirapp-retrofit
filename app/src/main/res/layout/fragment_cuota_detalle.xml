<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.fragments.CuotaDetalleFragment">

    <LinearLayout
        android:id="@+id/lyTitulo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/convivir_yellow_300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tvTituloCuota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuota Mantenimiento Julio"
            android:maxLength="35"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Title"/>
        <TextView
            android:id="@+id/tvNumAnioMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuota 1002 : 2020-07"
            android:maxLength="50"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvFEmi_FVen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emitido el: 2020-07-15 - Vence el : 2020-08-05"
            android:maxLength="50"
            android:gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvSaldoTotal"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:gravity="center_horizontal"
            android:text="Saldo a Pagar: S/. 200.00" />
        <Button
            android:id="@+id/btVerDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="Ver Detalles"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/svDetalles"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/lyTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"/>

            <RadioGroup
                android:id="@+id/rgRadioGrupo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <RadioButton
                    android:id="@+id/rbPagoTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago Total"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_weight="1"
                    />

                <RadioButton
                    android:id="@+id/rbPagoParcial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago Parcial"
                    android:checked="true"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Title"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monto a Pagar"
                android:gravity="center_horizontal"
                style="@style/TextAppearance.AppCompat.Title"/>

            <EditText
                android:id="@+id/etMontoPagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                style="@style/TextAppearance.AppCompat.Title"/>
            <Button
                android:id="@+id/btPagar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Pagar"/>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>